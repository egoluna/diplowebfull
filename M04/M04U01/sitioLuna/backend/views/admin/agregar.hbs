<div class="container" style="margin:100px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Agregar una novedad</h4>
      <form action="/admin/novedades/agregar" method="post">
        <div class="mb-3">
          <label for="idtitulo" class="form-label">Título:</label>
          <input type="text" class="form-control rounded" id="idtitulo" placeholder="Titulo" name="titulo">
        </div>
        <div class="mb-3">
          <label for="idsubtitulo" class="form-label">Subtítulo:</label>
          <input type="text" class="form-control rounded" id="idsubtitulo" placeholder="Idea principal" name="subtitulo">
        </div>
        <div class="mb-3">
          <label for="idcuerpo" class="form-label">Cuerpo:</label>
          <textarea class="form-control rounded" id="idcuerpo" rows="3" placeholder="Describa la novedad completa" name="cuerpo"></textarea>
        </div>
        <button type="submit" class="btn btn-primary rounded-pill">Guardar</button>
      </form>      
      {{#if error}}      
        <br>
	        <h6 class="text-danger">{{message}}</h6>
      {{/if}}
    </div>
  </div>
</div>